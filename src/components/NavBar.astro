  </div>
  <div class="hamburger">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </div>
  <ul class="nav-list">
    <li><a href="/more_about">More About</a></li>
    <li><a href="/more_projects">More Projects</a></li>
    <li><a href="/#education">Education</a></li>
    <li><a href="/#skills">Skills</a></li>
    <li><a href="/#contact">Contact</a></li>
  </ul>
</nav>

<style>
    .navbar {
        background: #000000;
        padding: 1rem 5%;
        color: white;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between; 
        box-sizing: border-box;
    }

    .nav-brand a {
        font-size: 2rem;
        color: rgb(200, 200, 200);
        text-decoration: none;
        font-weight: bold;
        margin 0;
    }

    .hamburger {
      display: none;
      flex-direction: column;
      cursor: pointer;
      gap: 5px;
      margin-right: 1rem;
    }

    .bar {
      display: block;
      width: 25px;
      height: 3px;
      background-color: rgb(200, 200, 200);
      transition: all 0.3s ease;
    }

    .nav-list {
      list-style: none;
      display: flex;
      margin: 0;
      padding: 0;
      gap: 2rem;
    }

    @media (max-width: 768px) {
      .hamburger {
        display: flex;
      }
      .nav-list {
        display: none;
        position: absolute;
        top: 100%;
        left: auto;
        right: 0;
        flex-direction: column;
        background: #000000;
        padding: 1rem;
        gap: 0;
        margin: 0;
      }

      .nav-list.active {
        display: flex;
      }

      .nav-list li {
        padding: 0.5rem 0;
      }

      .hamburger.active .bar:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
      }
      .hamburger.active .bar:nth-child(2) {
        opacity: 0;
      }
      .hamburger.active .bar:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
      }
    }

    .nav-list a {
        color: rgb(200, 200, 200);
        text-decoration: none;
        font-weight: bold;
    }

    .nav-list a:hover {
        text-decoration: underline;
        color: white;
    }

</style>

<script>
  const hamburger = document.querySelector('.hamburger');
  const navList = document.querySelector('.nav-list');

  // Function to close the menu
  const closeMenu = () => {
    hamburger?.classList.remove('active');
    navList?.classList.remove('active');
  }

  // Toggle menu on hamburger click
  hamburger?.addEventListener('click', (e) => {
    e.stopPropagation();
    hamburger?.classList.toggle('active');
    navList?.classList.toggle('active');
  });

  // Close menu when clicking outside
  window.addEventListener('click', (e) => {
    if (e.target instanceof Node && !hamburger?.contains(e.target) && !navList?.contains(e.target)) {
      closeMenu();
    }
  });
</script>