---
export interface Props {
    title: string;
    description: string;
    url: string;
    image: string;
    featured?: boolean;
}

const { title, description, url, image, featured = false } = Astro.props;
---
<a class={`project-card ${featured ? 'featured' : ''}`} href={url} target="_blank" rel="noopener noreferrer">
    {featured && (
        <div class="image-container">
            <div class="card-image" style={`background-image: url(${image});`}></div>
        </div>
    )}
    <div class="text-content">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</a>

<style>
    .project-card {
        background: #1a1a1a;
        padding: 1rem;
        border-radius: 8px;
        color: white;
        text-decoration: none;
        display: flex;
    }

    .project-card.featured {
        height: 700px;
        flex-direction: column;
    }

    .project-card:hover {
        transform: translateY(-5px);
    }

    .text-content {
    flex: 1;
    }

    .featured h3 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .featured p {
        font-size: 1.2rem;
    }

    .image-container {
        height: 100%;
        width: 100%;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .card-image {
        width: 100%;
        height: 100%;
        background-repeat: no-repeat;
        background-size: contain;
        background-position: center;
    }

    .project-card:hover .project-image {
        opacity: 1;
        transition: opacity 0.3s ease-in-out;
    }
</style>
